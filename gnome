#!/bin/bash

sudo true
git clone https://aur.archlinux.org/yay.git && cd yay/ && makepkg -si --noconfirm && cd .. && rm -rf yay/
yay -Sy --needed $(cat base | egrep -v "^\s*(#|$)")
yay -Sy --needed $(cat pkg | egrep -v "^\s*(#|$)")

sh install/xdman
sh install/configs
sh install/neovim
sh install/zsh

#End
