#!/bin/bash

sudo true
git clone https://aur.archlinux.org/yay.git && cd yay/ && makepkg -si --noconfirm && cd .. && rm -rf yay/
yay -Sy --needed --noconfirm $(cat base | egrep -v "^\s*(#|$)")
yay -Sy --needed --noconfirm $(cat pkg | egrep -v "^\s*(#|$)")

sh install/app
sh install/zsh
sh install/config
sh install/neovim
